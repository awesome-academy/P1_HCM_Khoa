<div id="logreg-forms">
  <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Form</h1>
  <%= form_for(@user,html: {class: "form-signin"}) do |f| %>
    <%= render "shared/form_error_messages", object: @user %>
    <%= f.text_field :name,class: "form-control", placeholder: t("views.tag.name") %>
    <%= f.text_field :email,class: "form-control", placeholder: t("views.tag.email") %>
    <%= f.text_field :phone,class: "form-control", placeholder: t("views.tag.phone") %>
    <%= f.text_field :bank_account,class: "form-control", placeholder: t("views.tag.bank_account") %>
    <% if !logged_in? %>
      <%= f.password_field :password,class: "form-control", placeholder: t("views.tag.password") %>
      <%= f.password_field :password_confirmation,class: "form-control", placeholder: t("views.tag.password_confirmation") %>
    <% end %>
    <% if is_admin? %>
      <%= f.label t("views.tag.role") %>
      <%= f.select :role, User.role.keys.to_a, :class => "form-control" %><br>
      <br>
    <% end %>
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>
  <br>
</div>
